{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "noEmit": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".dist/build",
    "target": "es2021",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "src/renderer/*", "src/renderer/modules/*"],
      "api/*": ["src/renderer/api/*"],
      "models/*": ["src/renderer/models/*"],
      "style/*": ["src/renderer/style/*"],
      "components/*": ["src/renderer/components/*"]
    }
  },
  "include": ["src", "configs"],
  "exclude": ["node_modules", "build", "**/node_modules/*"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}