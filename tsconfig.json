{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "outDir": "./build",
    "target": "es5",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["./*"],
      "renderer/*": ["./renderer/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "**/node_modules/*"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}