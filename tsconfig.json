{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "outDir": "./dist/app",
    "target": "es2021",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["./*"],
      "utils/*": ["./renderer/utils/*"],
      "modules/*": ["./renderer/modules/*"],
      "style/*": ["./renderer/style/*"],
      "components/*": ["./renderer/components/*"]
    }
  },
  "include": ["src", "configs"],
  "exclude": ["node_modules", "build", "**/node_modules/*"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}