{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "outDir": "./dist/app",
    "target": "es2021",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["./*"],
      "renderer/*": ["./renderer/*"],
      "Router/*": ["./renderer/Router/*"],
      "Landing/*": ["./renderer/Landing/*"],
      "Style/*": ["./renderer/Style/*"],
    }
  },
  "include": ["src", "configs"],
  "exclude": ["node_modules", "build", "**/node_modules/*"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}