{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "noEmit": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".dist/build",
    "target": "es2021",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "src/renderer/*", "src/renderer/modules/*"],
      "utils/*": ["src/renderer/utils/*"],
      "modules/*": ["src/renderer/modules/*"],
      "App/*": ["src/renderer/App/*"],
      "style/*": ["src/renderer/style/*"],
      "components/*": ["src/renderer/components/*"],
      "contexts/*": ["src/renderer/components/contexts/*"],
    }
  },
  "include": ["src", "configs"],
  "exclude": ["node_modules", "build", "**/node_modules/*"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}